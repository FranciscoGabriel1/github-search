{
  "compilerOptions": {
    "baseUrl": ".", // Isso define o diret√≥rio raiz como a base para os caminhos relativos
    "paths": {
      "@pages/*": ["src/pages/*"], // Define um alias para todos os arquivos dentro de src/pages
      "@config/*": ["src/config/*"], // Define um alias para todos os arquivos dentro de src/config
      "@components/*": ["src/components/*"] // Define um alias para todos os arquivos dentro de src/config
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
